---
// @ts-ignore
import Logo from "./Logo.astro";
---

<footer>
    <div class="footer-container">
        <!-- Logo and Copyright -->
        <div class="copyright-container">
            <Logo />
            <p class="copyright-text">
                &copy; {new Date().getFullYear()} saveplays.com
            </p>
        </div>

        <!-- Downloader Links -->
        <div class="downloader-links">
            <h4>Downloaders</h4>
            <ul>
                <li><a href="/youtube-downloader">YouTube</a></li>
                <li><a href="/facebook-downloader">Facebook</a></li>
                <li><a href="/instagram-downloader">Instagram</a></li>
                <li><a href="/tiktok-downloader">TikTok</a></li>
            </ul>
        </div>

        <!-- Company Links -->
        <div class="company">
            <h4>Company</h4>
            <ul>
                <li><a href="/about-us">About Us</a></li>
                <li><a href="/faq">FAQ</a></li>
                <li><a href="/blog">Blog</a></li>
            </ul>
        </div>

        <!-- Legal Links -->
        <div class="legal">
            <h4>Legal</h4>
            <ul>
                <li><a href="/privacy-policy">Privacy Policy</a></li>
                <li><a href="/terms-of-service">Terms of Service</a></li>
            </ul>
        </div>

        <!-- Language Selector -->
        <div class="language">
            <h4>Languages</h4>
            <ul class="navbar-language-menu">
                <li><a class="navbar-language-item" href="/">English</a></li>
                <li><a class="navbar-language-item" href="/ar">العربية</a></li>
                <li>
                    <a class="navbar-language-item latino-type" href="/es"
                        >Español</a
                    >
                </li>
                <li>
                    <a class="navbar-language-item latino-type" href="/fr"
                        >Français</a
                    >
                </li>
                <li><a class="navbar-language-item" href="/hi">हिंदी</a></li>
                <li><a class="navbar-language-item" href="/zh">中文</a></li>
                <li><a class="navbar-language-item" href="/bn">বাংলা</a></li>
                <li><a class="navbar-language-item" href="/ru">Русский</a></li>
                <li>
                    <a class="navbar-language-item" href="/id"
                        >Bahasa Indonesia</a
                    >
                </li>
                <li><a class="navbar-language-item" href="/de">Deutsch</a></li>
            </ul>
        </div>
    </div>
</footer>
